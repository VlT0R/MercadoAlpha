@model IEnumerable<MercadoAlpha.Models.Usuarios>

@{
    ViewData["Title"] = "Index";
}
<style>
    body {
        background-color: black;
        
    }

</style>

<h1 class="text-center text-warning">Cadastrar usuario</h1>

<p>
    <a asp-action="Create">Criar usuario</a>
</p>
<table class="table">
    <thead class="bg-danger text-light">
        <tr>
            <th scope="col" class="border border-white">
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th scope="col" class="border border-white">
                @Html.DisplayNameFor(model => model.Login)
            </th scope="col" class="border border-white">
            <th scope="col" class="border border-white">
                @Html.DisplayNameFor(model => model.Senha)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="table-secondary  text-center">
            <td class="border border-dark">
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Login)
            </td class="border border-dark">
            <td class="border border-dark">
                @Html.DisplayFor(modelItem => item.Senha)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
               
            </td>
        </tr>
}
    </tbody>
</table>
