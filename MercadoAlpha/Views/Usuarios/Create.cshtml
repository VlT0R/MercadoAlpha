@model MercadoAlpha.Models.Usuarios

@{
    ViewData["Title"] = "Create";
}
<style>
    body {
        background-color: black;
        font-weight: bold;
    }

    .negrito {
        font-weight: bold;
    }
</style>

<h1 class="col-md-4  offset-3 col-5 text-warning text-nowrap negrito">Cadastrar Usuario</h1>

<hr />
<div class="row negrito">
    <div class="col-2"></div>
    <div class="col-8">
        <div class="card text-white bg-danger text-center negrito">

            <div class="card-body">
                <form asp-action="Create">

                    <div class=" bg-danger text-light">

                        <div class="form-group row">
                            <div class="col-6">
                                <label>Login</label>
                                <input asp-for="Login" class="form-control" placeholder="Ex: admin" />
                            </div>
                            <div class="col-6">
                                <label>Senha</label>
                                <input asp-for="Senha" class="form-control" placeholder="Ex: admin" />
                            </div>

                        </div>
                        <div class=" card-footer">
                            <input type="submit" value="Cadastrar" class="btn btn-success negrito" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
