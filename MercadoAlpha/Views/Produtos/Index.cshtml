@model IEnumerable<MercadoAlpha.Models.Produtos>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col" class="border border-white">
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th scope="col" class="border border-white">
                @Html.DisplayNameFor(model => model.UnidadeMedida)
            </th>
            <th scope="col" class="border border-white">
                @Html.DisplayNameFor(model => model.Marca)
            </th>
            <th scope="col" class="border border-white">
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th scope="col" class="border border-white">
                @Html.DisplayNameFor(model => model.Codigo)
            </th>
            <th scope="col" class="border border-white">
                @Html.DisplayNameFor(model => model.DataValidade)
            </th>
            <th scope="col" class="border border-white">
                @Html.DisplayNameFor(model => model.Preco)
            </th>
            <th scope="col" class="border border-white">
                @Html.DisplayNameFor(model => model.QtdEstoque)
            </th>

        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnidadeMedida)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Marca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Codigo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataValidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Preco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QtdEstoque)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Deletar", "Delete", new { id = item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
