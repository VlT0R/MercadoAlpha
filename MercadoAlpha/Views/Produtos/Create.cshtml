@model MercadoAlpha.Models.Produtos

@{
    ViewData["Title"] = "Create";
}

<style>
body{
    background-color:black;
     font-weight: bold;
}
.negrito{
        font-weight: bold;
    }
</style>
<img src="/logoalfa.png" width="200" height="150">
<h1 class="col-md-4  offset-3 col-5 text-warning text-nowrap negrito">Cadastrar Produto</h1>

<hr />
<div class="row negrito">
    <div class="col-2"></div>
    <div class="col-8">
        <div class="card text-white bg-danger text-center negrito">

            <div class="card-body">
                <form asp-action="Create">

                    <div class=" bg-danger text-light">

                        <div class="form-group row">
                            <div class="col-6">
                                <label> Unidade Medida</label>
                                <input asp-for="UnidadeMedida" class="form-control" placeholder="Un/Litro/Kg..." />
                            </div>
                            <div class="col-6">
                                <label>Marca</label>
                                <input asp-for="Marca" class="form-control" placeholder="Ex : Sadia " />
                            </div>

                        </div>
                       
                        <div class="form-group row">
                            <div class="col-6">
                                <label>
                                    Nome
                                </label>
                                <input asp-for="Nome" class="form-control" placeholder="Ex: Frango" />
                            </div>
                            <div class="col-6">
                                <label>
                                    Código de barra
                                </label>
                                    <input asp-for="Codigo" class="form-control" placeholder="0-000000-000000" />
                                </div>
                            </div>
                            
                        <div class="form-group row">
                            <div class="col-6">
                                <label>Validade</label>
                                <input asp-for="DataValidade" class="form-control " placeholder="00/00/0000" />
                            </div>
                            <div class="col-6">
                                <label>
                                    Preço
                                    <input asp-for="Preco" class="form-control" placeholder="Ex : R$25,00" />
                                </label>
                            </div>
                        </div>
                            
                            <div class="form-group row">
                                <div class="col-6">
                                    <label>Qtd Estoque</label>
                                    <input asp-for="QtdEstoque" class="form-control " placeholder=" quantidade em estoque" />
                                </div>
                            </div>
                            <div class=" card-footer">
                                <input type="submit" value="Cadastrar" class="btn btn-success negrito" />
                            </div>
                        </div>
                </form>
            </div>
        </div>
    </div>
   
</div>

<div>
    <a asp-action="Index">Ir para a Consulta</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
