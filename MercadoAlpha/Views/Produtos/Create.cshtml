@model MercadoAlpha.Models.Produtos

@{
    ViewData["Title"] = "Create";
}

<style>
    body {
        background-color: black;
    }
</style>




<h1 class="col-md-4  offset-3 col-5 text-warning text-nowrap">Cadastro de produtos</h1>

<hr />
<div class="row">
    <div class="card text-white bg-danger m-12 offset-4 col-4 card text-center" style="max-width: 18rem;">
        
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class=" bg-danger text-light m-20">
                    <div class="form-group ">
                        <label>Unidade Medida</label>
                        <input asp-for="UnidadeMedida" class="form-control mt-3 " placeholder="Un/Litro/Kg..." />
                    </div>
                    <div class="form-group">
                        <label>Marca</label>
                        <input asp-for="Marca" class="form-control mt-3" placeholder="Ex : Sadia " />
                    </div>
                    <div class="form-group">
                        <label>Nome</label>
                        <input asp-for="Nome" class="form-control mt-3" placeholder="Ex: Frango" />
                    </div>
                    <div class="form-group">
                        <label>Código de barra</label>
                        <input asp-for="Codigo" class="form-control mt-3" placeholder="0-000000-000000" />
                    </div>
                    <div class="form-group">
                        <label>Validade</label>
                        <input asp-for="DataValidade" class="form-control mt-3" placeholder="dia/mês/ano" />
                    </div>
                    <div class="form-group">
                        <label>Preço</label>
                        <input asp-for="Preco" class="form-control mt-3" placeholder="Ex : R$25,00" />
                    </div>
                    <div class="form-group">
                        <label>Qtd Estoque</label>
                        <input asp-for="QtdEstoque" class="form-control mt-3" placeholder=" quantidade em estoque" />
                    </div>
                    <div class=" card-footer">
                        <input type="submit" value="Cadastrar" class="btn btn-success" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Ir para a Consulta</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
